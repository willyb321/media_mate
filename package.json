{
  "name": "media-mate",
  "productName": "MediaMate",
  "version": "1.2.1",
  "private": true,
  "license": "MIT",
  "description": "A full media server/player/downloader/etc - in one",
  "repository": "willyb321/media_mate",
  "author": {
    "name": "willyb321",
    "email": "wbwilliam7@gmail.com",
    "url": "tehsuperwilly.tech"
  },
  "scripts": {
    "compile": "(cd app && npm run compile)",
    "test": "node tests/",
    "prestart": "gulp && gulp index",
    "start": "electron app/",
    "pack": "gulp index && gulp build:pack",
    "dist": "gulp index && gulp build:dist",
    "release": "gulp index && gulp build:dist",
    "tag": "release-it",
    "lint": "eslint . -c .eslintrc --format=node_modules/eslint-formatter-pretty",
    "docs": "jsdoc -c ./conf.json -R readme.md",
    "postinstall": "(electron-builder install-app-deps)",
    "deps": "(ncu -au && cd app && ncu -au)",
    "changelog": "gulp changelog"
  },
  "pre-commit": [
    "lint"
  ],
  "keywords": [
    "electron-app",
    "electron"
  ],
  "devDependencies": {
    "ava": "^0.22.0",
    "babel-core": "^7.0.0-beta.2",
    "babel-preset-env": "^2.0.0-beta.2",
    "babel-preset-react": "^7.0.0-beta.2",
    "cp-file": "^5.0.0",
    "del": "^3.0.0",
    "devtron": "^1.4.0",
    "electron": "1.8.1",
    "electron-builder": "^19.34.1",
    "electron-compilers": "^5.9.0",
    "electron-rebuild": "^1.6.0",
    "eslint": "^4.8.0",
    "eslint-config-xo": "^0.18.2",
    "eslint-formatter-pretty": "^1.3.0",
    "eslint-plugin-google-camelcase": "^0.0.2",
    "github-changes": "^1.1.0",
    "gulp": "^3.9.1",
    "gulp-ava": "^0.18.0",
    "gulp-babel": "^7.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-if": "^2.0.2",
    "gulp-inject": "^4.3.0",
    "gulp-sourcemaps": "^2.6.1",
    "gulp-uglify": "^3.0.0",
    "gulp-xo": "^0.16.0",
    "ink-docstrap": "^1.3.0",
    "is-ci": "^1.0.10",
    "jsdoc": "^3.5.5",
    "jsdoc-export-default-interop": "^0.3.1",
    "jsdoc-strip-async-await": "^0.1.0",
    "mkdirp": "latest",
    "npm-check-updates": "^2.13.0",
    "pngjs": "^3.3.0",
    "pre-commit": "^1.2.2",
    "release-it": "^3.1.0-beta.0",
    "rimraf": "^2.6.2",
    "spectron": "^3.7.2",
    "tape": "^4.8.0",
    "tui-jsdoc-template": "^1.2.2"
  },
  "ava": {},
  "xo": {
    "esnext": true,
    "envs": [
      "node",
      "browser"
    ],
    "reporter": "mocha-circleci-reporter",
    "ignores": [
      "tests/*",
      "test.js",
      "gulpfile.babel.js",
      "app/indexbuild.*",
      "docs/**/*"
    ]
  },
  "build": {
    "electronCompile": true,
    "nodeGypRebuild": false,
    "appId": "com.willyb321.media_mate",
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "category": "public.app-category.entertainment",
      "publish": [
        "github"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ],
      "publish": [
        "github"
      ]
    },
    "linux": {
      "category": "AudioVideo",
      "maintainer": "Willyb321",
      "synopsis": "A full media server/player/downloader/etc - in one",
      "target": [
        "AppImage"
      ],
      "publish": [
        "github"
      ]
    }
  }
}
