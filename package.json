{
  "name": "media-mate",
  "productName": "Media Mate",
  "version": "1.3.3",
  "private": true,
  "license": "MIT",
  "description": "A full media server/player/downloader/etc - in one",
  "repository": "willyb321/media_mate",
  "author": {
    "name": "willyb321",
    "email": "wbwilliam7@gmail.com",
    "url": "https://mediamate.williamblythe.info"
  },
  "scripts": {
    "compile": "(cd app && npm run compile)",
    "test": "node tests/",
    "prestart": "gulp && gulp index",
    "start": "electron --inspect-brk=5858 app/",
    "pack": "gulp index && gulp build:pack",
    "dist": "gulp index && gulp build:dist",
    "release": "gulp index && gulp build:dist",
    "tag": "release-it",
    "lint": "eslint . -c .eslintrc --format=node_modules/eslint-formatter-pretty",
    "docs": "jsdoc -c ./conf.json -R readme.md",
    "postinstall": "(electron-builder install-app-deps)",
    "deps": "(ncu -au && cd app && ncu -au)",
    "changelog": "gulp changelog"
  },
  "greenkeeper": {
    "ignore": [
      "electron-builder"
    ]
  },
  "pre-commit": [
    "lint"
  ],
  "keywords": [
    "electron-app",
    "electron"
  ],
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.32",
    "@babel/preset-env": "^7.0.0-beta.32",
    "@types/blob-util": "^1.3.3",
    "@types/bytes": "^2.5.1",
    "@types/cp-file": "^4.2.0",
    "@types/debug": "^0.0.30",
    "@types/del": "^3.0.0",
    "@types/dotenv": "^4.0.2",
    "@types/electron-json-storage": "^4.0.0",
    "@types/electron-notify": "^0.1.6",
    "@types/electron-window-state": "^2.0.31",
    "@types/fs-extra": "^5.0.1",
    "@types/gulp": "^4.0.5",
    "@types/gulp-babel": "^6.1.29",
    "@types/gulp-concat": "^0.0.32",
    "@types/gulp-if": "^0.0.33",
    "@types/gulp-inject": "^0.0.33",
    "@types/gulp-sourcemaps": "^0.0.32",
    "@types/gulp-uglify": "^3.0.4",
    "@types/json-stringify-safe": "^5.0.0",
    "@types/klaw-sync": "^1.1.3",
    "@types/lru-cache": "^4.1.0",
    "@types/mkdirp": "^0.5.1",
    "@types/node-dir": "^0.0.32",
    "@types/parseurl": "^1.3.1",
    "@types/pngjs": "^3.3.0",
    "@types/raven": "^2.1.5",
    "@types/request": "^2.0.8",
    "@types/rimraf": "^2.0.2",
    "@types/send": "^0.14.4",
    "@types/source-map-support": "^0.4.0",
    "@types/tape": "^4.2.31",
    "@types/underscore": "^1.8.5",
    "@types/video.js": "^6.2.4",
    "@types/webtorrent": "^0.98.4",
    "babel-plugin-source-map-support": "^2.0.1",
    "babel-preset-react": "^6.24.1",
    "cp-file": "^5.0.0",
    "del": "^3.0.0",
    "devtron": "^1.4.0",
    "electron": "2.0.5",
    "electron-builder": "^20.2.0",
    "electron-compilers": "^5.9.0",
    "eslint": "^4.18.1",
    "eslint-config-xo": "^0.20.1",
    "eslint-plugin-google-camelcase": "^0.0.2",
    "github-changes": "^1.1.1",
    "gulp": "^3.9.1",
    "gulp-babel": "^8.0.0-beta.0",
    "gulp-concat": "^2.6.1",
    "gulp-if": "^2.0.2",
    "gulp-inject": "^4.3.1",
    "gulp-sourcemaps": "^2.6.1",
    "gulp-uglify": "^3.0.0",
    "gulp-xo": "^0.17.0",
    "is-ci": "^1.0.10",
    "jsdoc": "^3.5.5",
    "mkdirp": "latest",
    "pngjs": "^3.3.2",
    "pre-commit": "^1.2.2",
    "release-it": "^7.2.0",
    "rimraf": "^2.6.2",
    "tape": "^4.9.0",
    "tui-jsdoc-template": "^1.2.2"
  },
  "xo": {
    "esnext": true,
    "envs": [
      "node",
      "browser"
    ],
    "reporter": "mocha-circleci-reporter",
    "ignores": [
      "tests/*",
      "test.js",
      "gulpfile.babel.js",
      "app/indexbuild.*",
      "docs/**/*"
    ]
  },
  "build": {
    "electronCompile": true,
    "nodeGypRebuild": false,
    "appId": "com.willyb321.media_mate",
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "category": "public.app-category.entertainment",
      "publish": [
        "github"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ],
      "publish": [
        "github"
      ]
    },
    "linux": {
      "category": "AudioVideo",
      "maintainer": "Willyb321",
      "synopsis": "A full media server/player/downloader/etc - in one",
      "target": [
        "AppImage"
      ],
      "publish": [
        "github"
      ]
    }
  }
}
